<h1>Your Orders</h1>
<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Order ID</th>
      <th>Date</th>
      <th>Total</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at.strftime("%B %d, %Y") %></td>
        <td><%= number_to_currency(order.total) %></td>
        <td><%= link_to 'View', order_path(order), class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
